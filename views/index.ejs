  <div class="row">
     <div class="col m-1" data-position="add-event">
      <h2>Add Event Shawty</h2>
      <form action="/events" method="POST">
        <input type="text" placeholder="Title of Event" name="title" />
        <input type="text" placeholder="Description" name="description" />
        <input type="datetime-local" name="date">
        
        <input type="reset" value="Reset">
        <button type="submit">Submit</button>
      </form>
    </div>

    <div class="col m-1" data-position="events">
      <h2>Events</h2>
        <% for(var i = 0; i < events.length; i++) {%>
          <div class=""> <hr class="text-dark">
            <h4>Title: <%= events[i].title %></h4>
            <p>Description: <%= events[i].description %></p>
            <strong><p>Date: <%= events[i].date %></p></strong>
          </div>
        <% } %>
      
    </div>
  </div>

